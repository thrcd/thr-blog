{{define "content"}}
    <div class="post-meta">
        ⧖ {{humanDate .Markdown.Metadata.Date}}
    </div>


    {{with .Markdown.Metadata.Tags}}
        <div class="post-meta">
            <span>
                {{range $i, $tag := .}}
                    ◆ <i>{{$tag}}<br></i>
                {{end}}
            </span>
        </div>
    {{end}}



    <div class="post">
        <h4>{{.Markdown.Metadata.Title}}</h4>
        {{.Markdown.Body}}
    </div>
{{end}}